\begin_layout Itemize

\color red
- :
\color inherit
 Separador
\end_layout

\begin_layout Itemize

\color red
<N
\color inherit
: Inicia con N, 
\end_layout

\begin_layout Itemize

\color red
x:
\color inherit
 Seguido de cualquier amino
\end_layout

\begin_layout Itemize

\color red
R:
\color inherit
 Seguido del amino R
\end_layout

\begin_layout Itemize

\color red
{P}
\color inherit
: Cualquier amino excepto P
\end_layout

\begin_layout Itemize

\color red
[ST]
\color inherit
: Seguido por el amino S o T
\end_layout

\begin_layout Itemize

\color red
G>
\color inherit
: Termina en el amino G
