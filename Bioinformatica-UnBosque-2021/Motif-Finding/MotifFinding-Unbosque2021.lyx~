\end_layout

\begin_layout Itemize
Se presentan cuando hay pocas secuencias 
\color red

\begin_inset Formula $s=(s_{1},s_{2},s_{3},...,s_{t})$
\end_inset


\end_layout

\begin_layout Itemize
Resulta en probabilidades iguales a 0
\end_layout

\begin_layout Itemize
Resulta en logaritmos inválidos (log de 0 es infinito)
\end_layout

\begin_layout Plain Layout

\color red
Solución
\color inherit
:
\end_layout

\begin_layout Itemize
Sumarle 1 valor que no afecte el conteo
\end_layout

